<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    app:startDestination="@id/summons_fragment_dest">

    <fragment
        android:id="@+id/summon_detail_fragment_dest"
        android:name="com.example.myapplication.ui.summondetail.SummonDetailFragment"
        android:label="Summon Details">
        <argument
            android:name="summonId"
            app:argType="string" />
        <action
            android:id="@+id/action_summonDetailFragment_to_summonsFragment"
            app:destination="@id/summons_fragment_dest" />
    </fragment>

    <fragment
        android:id="@+id/summons_fragment_dest"
        android:name="com.example.myapplication.ui.summons.SummonsFragment"
        android:label="@string/app_name">
        <action
            android:id="@+id/action_summonsFragment_to_summonDetailFragment"
            app:destination="@id/summon_detail_fragment_dest" />
    </fragment>

</navigation>